<%- include('../_layouts/admin_header') %>

    <h2 class="page-title">Edit Category</h2>
    <a href="/admin/categories" class="btn btn-primary">Back to all categories</a>

    <form method="post" action="/admin/categories/edit-categories/<%= id %>">
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
        </div>
        
        <button>Submit</button>
    </form>

    <%- include('../_layouts/admin_footer') %>