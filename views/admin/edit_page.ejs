<%- include('../_layouts/admin_header') %>

    <h2 class="page-title">Edit page</h2>
    <a href="/admin/pages" class="btn btn-primary">Back to all pages</a>

    <form method="post" action="/admin/pages/edit-page/<%= slug %>">
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
        </div>

        <div class="form-group">
            <label for="">Slug</label>
            <input type="text" class="form-control" name="slug" value="<%=slug %>" placeholder="Slug">
        </div>

        <div class="form-group">
            <label for="">Content</label>
            <textarea name="content" id="ta" cols="30" rows="10" class="form-control" placeholder="Content"><%= content %></textarea>
        </div>

        <input type="hidden" name="id" value="<%= id %>">
        <button>Submit</button>
    </form>

    <%- include('../_layouts/admin_footer') %>