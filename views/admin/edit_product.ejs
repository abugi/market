<%- include('../_layouts/admin_header') %>

<h2 class="page-title">Edit Product</h2>
<a href="/admin/products" class="btn btn-primary">Back to all products</a>

<form method="post" action="/admin/products/edit-product/<%= id %>" enctype="multipart/form-data">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%=title%>" placeholder="Title">
    </div>

    <div class="form-group">
        <label for="">Description</label>
        <textarea name="desc" cols="30" rows="10" class="form-control" placeholder="Description"><%=desc%></textarea>
    </div>

    <div class="form-group">
        <label for="">Category</label>
        <select name="category" class="form-control" >
            <% categories.forEach(function(cat){ %>
                <option value="<%= cat.slug %>"
                <% if(cat.slug == category){ %>
                     selected="selscted"
                <% } %>  
                ><%= cat.title %></option>
            <% }) %>
        </select>
    </div>

    <div class="form-group">
        <label for="">Price</label>
        <input type="text" class="form-control" name="price" value="<%=price%>" placeholder="Price">
    </div>

    <div class="form-group">
        <label for="">Current Image</label>
        <p>
           <% if(image == ""){ %>
            <img class="noimage" src="images/noimage.png">
           <% }else{ %>
            <img class="noimage" src="/product_images/<%= id %>/<%= image %>">
           <% } %>
        </p>
    </div>

    <div class="form-group">
        <label for="">UploadImage</label>
        <input type="file" class="form-control" name="image" id="img">
        <img src="#" id="imgPreview" alt="Preview">
    </div>

    <input type="hidden" name="pimage" value="<%= image %>">
    <button>Submit</button>
</form>

<hr>
<h3 class="page-header">Gallery</h3>
<ul>
    <% gallery.forEach(function(image){ %>
        <% if(image != 'thumbs'){ %>
            <li>
                <img src="/product_images/<%= id %>/gallery/thumbs/<%= image %>">&nbsp;
                <a class="confirmDeletion" href="/admin/products/delete-image/<%= image %>?id=<%= id %>/">Delete</a>
            </li>
        <% } %>
       
    <% }) %>
</ul>
<br><br>
<form action="/admin/products/product-gallery/<%= id %>" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm"></form>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.4.0/basic.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.4.0/dropzone.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.4.0/dropzone.js"></script>

<script>

    //Preview Image
    function readURL(input){
        if(input.files && input.files[0]){
            var reader = new FileReader();

            reader.onload = function(e){
                $("#imgPreview").attr('src', e.target.result).width(100).height(100)
            }
            reader.readAsDataURL(input.files[0])
        }
    }

    $('#img').change(function(){
        readURL(this)
    })

    //Drop zone
    Dropzone.options.dropzoneForm = {
        acceptedFiles: "image/*",
        init: function(){
            this.on('queuecomplete', function(file){
                setTimeout(() => {
                    location.reload()
                }, 1000);
            })
        }
    }
</script>

<%- include('../_layouts/admin_footer') %>